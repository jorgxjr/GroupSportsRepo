@model IEnumerable<GroupSports.DL.DM.mesocycle>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="content-page">
  
    
        <p style="margin-top: 30px; margin-left: 15px; margin-right: 15px">
            @Html.ActionLink("Nuevo Mesociclo", "Create")
        </p>
        <table class="table" style="margin-left: 15px">
            <tr>
                <th>
                    N° Semanas Intensas
                </th>
                <th>
                    N° Semanas Descanso
                </th>
                <th>
                    Fecha Inicio
                </th>
                <th>
                    Fecha Fin
                </th>
                <th>
                    Mesociclo
                </th>
                <th>
                    Opciones
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.numberOfIntenseWeeks)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.numberOfRestWeeks)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.startDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.endDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.mesocycleType.mesocycleName)
                    </td>
                   
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                        @Html.ActionLink("Borrar", "Delete", new { id = item.id })
                    </td>
                </tr>
            }

        </table>

        <div style="margin-top: 30px; margin-left: 15px; margin-right: 15px">
            @Html.ActionLink("Atrás", "Index", "TrainingPlans")
        </div>

    </div>